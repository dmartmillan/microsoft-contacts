<div class="jumbotron">
    <h1>Microsoft Contacts</h1>
    <p class="lead">A little show of synchronization.</p>
    {{#if user}}
        <h4>Welcome {{ user.displayName }}!</h4>
        <p>Email logged: {{ user.email }} </p>
    {{else}}
        <a href="/auth/signin" class="btn btn-primary btn-large">Click here to sign in</a>
    {{/if}}
</div>

